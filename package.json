{
  "name": "expense-income-tracker",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "setup-db": "node setup-db.js",
    "migrate-db": "node migrate-db.js",
    "check-schema": "node check-schema.js",
    "reset-db": "node reset-db.js",
    "test": "jest",
    "test:backend": "jest tests/server.test.js tests/auth.test.js tests/integration.test.js",
    "test:frontend": "jest tests/frontend-*.test.js",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "deploy:local": "./deploy.sh local",
    "deploy:docker": "./deploy.sh docker",
    "deploy:production": "./deploy.sh production",
    "docker:build": "docker build -t balancetrack .",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "docker:logs": "docker-compose logs -f"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "description": "",
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "body-parser": "^2.2.0",
    "dotenv": "^17.2.0",
    "express": "^5.1.0",
    "express-rate-limit": "^8.0.1",
    "express-session": "^1.18.2",
    "path": "^0.12.7",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@testing-library/jest-dom": "^6.1.4",
    "eslint": "^9.31.0",
    "globals": "^16.3.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "nodemon": "^3.1.10",
    "supertest": "^6.3.4"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "coverageReporters": [
      "text",
      "html",
      "lcov"
    ],
    "coverageDirectory": "coverage",
    "projects": [
      {
        "displayName": "backend",
        "testEnvironment": "node",
        "testMatch": [
          "<rootDir>/tests/integration.test.js",
          "<rootDir>/tests/api.test.js",
          "<rootDir>/tests/server.test.js",
          "<rootDir>/tests/comprehensive-coverage.test.js",
          "<rootDir>/tests/edge-cases.test.js",
          "<rootDir>/tests/setup-db.test.js",
          "<rootDir>/tests/setup-db-coverage.test.js"
        ],
        "collectCoverageFrom": [
          "server.js",
          "setup-db.js"
        ]
      },
      {
        "displayName": "frontend",
        "testEnvironment": "jsdom",
        "testMatch": [
          "<rootDir>/tests/frontend-integration.test.js",
          "<rootDir>/tests/auth.test.js",
          "<rootDir>/tests/modular-architecture.test.js",
          "<rootDir>/tests/frontend-coverage.test.js"
        ],
        "collectCoverageFrom": [
          "public/js/**/*.js",
          "!public/js/lib/**"
        ]
      }
    ]
  }
}
